/ In HAML

.login_form
  = form_tag session_path, :method => 'post' do
    = h text_field_tag :username, nil, :placeholder => "username"
    %br
    = h password_field_tag :password, nil, :placeholder => "password" 
    %br
    = submit_tag("Submit")


